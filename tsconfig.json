{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["next", "node"]  // Include next types
  },
  "include": [
    "frontend/**/*.ts", 
    "backend/**/*.ts", 
    "frontend/.next/types/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
